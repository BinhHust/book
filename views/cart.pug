extends base

block content
  .container
    .row.my-3#cartContainer
      each book in booksInCart
        .col-6
          .border.border-dark.p-3.mb-3
            h2 Name: #{book.name}
            p Shop: #{book.shop.name}
            p= `Price: $${book.price}`
            p Quantity: #{book.quantity}
            button.btn.btn-danger#deleteToCart(data-book-id=`${book._id}`) Delete
    if (!total || total === 0)
      h2 No book In cart
    else
      h2= `TOTAL: $${total}`